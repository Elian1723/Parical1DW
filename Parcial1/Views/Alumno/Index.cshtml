@model List<AlumnoViewModel>

@{
    ViewData["Title"] = "Alumnos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Alumnos</h1>

<a title="Nuevo alumno" class="btn btn-success" asp-controller="Alumno" asp-action="BuscarAlumno">
    Nuevo <i class="bi bi-person-add"></i>
</a>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Carne</th>
                <th>Primer nombre</th>
                <th>Segundo nombre</th>
                <th>Primer apellido</th>
                <th>Segundo apellido</th>
                <th>Dirección</th>
                <th>Teléfono</th>
                <th>Correo</th>
                <th>Carrera</th>
                <th>Acción</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var alumno in Model)
            {
                <tr>
                    <td>@alumno.CarneAlumno</td>
                    <td>@alumno.Nombre1Alumno</td>
                    <td>@alumno.Nombre2Alumno</td>
                    <td>@alumno.Apellido1Alumno</td>
                    <td>@alumno.Apellido2Alumno</td>
                    <td>@alumno.DireccionAlumno</td>
                    <td>@alumno.TelefonoAlumno</td>
                    <td>@alumno.CorreoAlumno</td>
                    <td>@alumno.NombreCarrera</td>
                    <td>
                        <div class="d-flex justify-content-between">
                            <a title="Editar" class="btn btn-info btn-sm me-2" asp-controller="Alumno" asp-action="BuscarAlumno" asp-route-carne="@alumno.CarneAlumno">
                                <i class="bi bi-pencil-square"></i>
                            </a>

                            <a title="Eliminar" class="btn btn-danger btn-sm" asp-controller="Alumno" asp-action="Eliminar" asp-route-carne="@alumno.CarneAlumno">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>